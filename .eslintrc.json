{
    "extends": [
        "eslint:recommended",
        "plugin:@lwc/recommended"
    ],
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@lwc"
    ],
    "rules": {
        // Salesforce-specific rules
        "no-console": "warn",
        "no-unused-vars": "warn",
        "eqeqeq": [
            "error",
            "always"
        ],
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        // LWC-specific
        "@lwc/lwc/no-deprecated": "warn",
        "@lwc/lwc/no-async-await": "off",
        "@lwc/lwc/no-rest-parameter": "off",
        "@lwc/lwc/no-template-lifecycle-render": "warn"
    }
}
